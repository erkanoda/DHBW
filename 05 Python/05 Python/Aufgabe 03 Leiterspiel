import random

# Startposition
position = 1

# Spezialfelder: SchlÃ¼ssel = aktuelles Feld, Wert = neues Feld
spezialfelder = {
    3: 22,    # Leiter
    5: 8,     # Leiter
    11: 26,   # Leiter
    20: 29,   # Leiter
    27: 1,    # Schlange
    21: 9,    # Schlange
    17: 4,    # Schlange
    19: 7,    # Schlange
    90: 48,   # Schlange
    87: 94,   # Leiter
    99: 78    # Schlange
}

# Spielschleife
while position < 100:
    input("DrÃ¼cke Enter zum WÃ¼rfeln...")
    wurf = random.randint(1, 6)
    print(f"Du hast eine {wurf} geworfen.")

    if position + wurf <= 100:
        position += wurf
        print(f"Du ziehst auf Feld {position}.")
    else:
        print("Zug zu weit! Du bleibst stehen.")

    # Spezialfelder prÃ¼fen
    if position in spezialfelder:
        neue_position = spezialfelder[position]
        if neue_position > position:
            print(f"Leiter! Du steigst von {position} auf {neue_position}.")
        else:
            print(f"Schlange! Du fÃ¤llst von {position} auf {neue_position}.")
        position = neue_position

    print(f"Aktuelle Position: {position}")
    print("-" * 30)

print("ðŸŽ‰ GlÃ¼ckwunsch! Du hast das Zielfeld 100 erreicht!")
